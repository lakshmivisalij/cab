<Page
    x:Class="MapTest.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MapTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/Images/admin.png"/>
        </Grid.Background>
        <Button x:Name="btnAddCar" Content="Add Car" HorizontalAlignment="Left" Margin="123,364,0,0" VerticalAlignment="Top" Height="61" Width="188" Click="btnAddCar_Click"/>
        <Button x:Name="btnViewDrivers" Content="View Drivers' Details" HorizontalAlignment="Left" Margin="123,169,0,0" VerticalAlignment="Top" Height="61" Width="191" Click="btnViewDrivers_Click"/>
        <Button x:Name="btnViewUserDetails" Content="View Users' Details" HorizontalAlignment="Left" Margin="123,265,0,0" VerticalAlignment="Top" Height="61" Width="188" Click="btnViewUserDetails_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="123,75,0,0" TextWrapping="Wrap" Text="Admin Panel" VerticalAlignment="Top" Height="70" Width="287" FontSize="45"/>

    </Grid>
</Page>
